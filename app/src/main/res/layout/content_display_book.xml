<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.searchbook.DisplayBookActivity"
    tools:showIn="@layout/activity_display_book">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/bookCoverImg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/book_details_title"
        android:layout_below="@+id/bookCoverImg"
        android:layout_alignLeft="@+id/bookCoverImg"
        android:layout_alignStart="@+id/bookCoverImg"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publish_date"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:id="@+id/book_details_publish_date"
        android:layout_toEndOf="@+id/book_details_title"
        android:layout_below="@+id/book_details_title"
        android:layout_alignLeft="@+id/book_details_title"
        android:layout_alignStart="@+id/book_details_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:id="@+id/book_details_isbn"
        android:layout_toEndOf="@+id/book_details_publish_date"
        android:layout_below="@+id/book_details_publish_date"
        android:layout_alignLeft="@+id/book_details_publish_date"
        android:layout_alignStart="@+id/book_details_publish_date"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Pages"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:id="@+id/book_details_pages"
        android:layout_toEndOf="@+id/book_details_isbn"
        android:layout_below="@+id/book_details_isbn"
        android:layout_alignLeft="@+id/book_details_isbn"
        android:layout_alignStart="@+id/book_details_isbn"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="publish Places"
        android:id="@+id/book_details_publish_place"
        android:layout_marginTop="7dp"
        android:textColor="#000000"
        android:layout_below="@+id/book_details_pages"
        android:layout_alignLeft="@+id/book_details_pages"
        android:layout_alignStart="@+id/book_details_pages"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
